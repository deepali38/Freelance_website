<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-8 is-offset-2">
        <h1 class="title is-3">Upload Document</h1>
        <%= simple_form_for [@job, @bid] do |f| %>
          <%= f.error_notification %>

          <div class="field column">
            <div class="control">
              <label class="label">Files Upload</label>
              <div class="file">
                <%= f.file_field :document, direct_upload: true %>
              </div>
            </div>
          </div>

          <hr />

          <%= f.button :submit, "Upload Document", class: "button is-primary is-small is-rounded mv4" %>
        <% end %>
      </div>
    </div>
  </div>
</section>