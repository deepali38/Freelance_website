<section class="section">
  <div class="container">
    <div class="columns">
      <div class="column is-8 is-offset-2">
        <h1 class="title is-3">Bid</h1>
        <%= simple_form_for [@job, @job.bids.build] do |f| %>
          <%= f.error_notification %>

      <div class="field">
        <div class="control">
        <%= f.input :amount, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "$/month" %>
        </div>
      </div>

    <hr />

    <%= f.button :submit, class: "button is-primary is-small is-rounded mv4" %>

      <% end %>
      </div>
    </div>
  </div>
</section>