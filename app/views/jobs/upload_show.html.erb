<div class="container">
    <div class=" px-4 py-5 text-center" id="featured-3">
      <h1 class="pb-2 name bottom-border"><%=link_to Current.user.name_or_company_name%>
      </h1>
    </div>
    <div class="row">
      <% if @user.client?%>
          <div class="col">
          <%=link_to 'View Job Post',jobs_path%>
          </div>
          <div class="col">
          <%=link_to 'Bids on jobs', bids_path%>
          </div>
          <div class="col">
           <%=link_to 'Project Files uploads', files_path%>
          </div>
      <%else%>
          <div class="col">
          <%=link_to 'Applied Jobs',jobs_path%>
          </div>
          <div class="col">
          <%=link_to 'Bid Status', bids_path%>
          </div>
          <div class="col">
          <%=link_to 'Upload Documents', files_path%>
          </div>
      <%end%>
    </div>

    <%if Current.user.client?%>
      <div class="column pl3">
        <% @jobs.each do |job| %>
          <% if job.user == Current.user %>
            <%job.bids.each do |bid|%>
                <% if bid.status=="Accepted"%>
              <div class="columns border-bottom pt4">
                <div class="column is-1">
                </div>
                  <div class="column is-8">
                    <h3 class="title is-4 index-title"><%= link_to bid.user.name_or_company_name, bid.user.profile%> <span class="fs-10"></h3> 
                    <ul>
                      <li><%= link_to bid.job.title %></li>
                      <li><%= link_to bid.job.job_author %></li>
                    </ul>
                    <div class="pv2 f6">
                    <%= sanitize(bid.job.description.truncate(200, separator: '</p>')) %>
                    </div>
                    
                    <ul class="pv3">
                      <li class="inline-block">
                        <%= link_to 'View',job, class: 'button is-small is-link is-outlined' %></li>
                    </ul>
                  </div>
                  <div class="column has-text-right">
                    <button type="button" class="btn btn-dark my-4"> $ <%= bid.amount%>/month</button><br>
                    STATUS: <%= link_to bid.status%>
                    <% link_to "Documents" %>
                </div>
              </div>
              <%end%> 
            <%end%>   
          <%end%>
        <%end%>
      </div>
    <%else%>
      <div class="column pl3">
        <% @bids.each do |bid| %>
          <% if bid.user == Current.user %>
          <% if bid.status =="Accepted"%>
              <div class="columns border-bottom pt4">
                <div class="column is-1">
                </div>
                  <div class="column is-8">
                    <ul>
                      <li><%= link_to bid.job.title %></li>
                      <li><%= link_to bid.job.job_author %></li>
                    </ul>
                    <div class="pv2 f6">
                    <%= sanitize(bid.job.description.truncate(200, separator: '</p>')) %>
                    </div>
                    <ul class="pv3">
                      <li class="inline-block">
                        <%= link_to 'View', class: 'button is-small is-link is-outlined' %></li>
                    </ul>
                  </div>
                  <div class="column has-text-right">
                    <P>
                      Status: <button type="button" class="btn btn-warning btn-sm"><%= bid.status%></button>
                    </p>
                </div>
              </div>
            <%end%>  
             <%end%> 
        <%end%>
      </div>
    <%end%>
</div>