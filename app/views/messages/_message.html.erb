<div class="cont-<%= message.user.id %>">
  <div class="message-box msg-<%= message.user.id %> " >
    <div class="d-flex align-items-center">
      <%= image_tag(message.user.avatar, class:'chat_pfp') %>

      <div>
        <span class="name"> <%= message.user.name_or_company_name %></span>
        <p class="time"><%= time_ago_in_words(message.created_at) %> ago</p>
      </div>
    </div>
    <%= message.content %>
  </div>
</div>