<section class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
      <h1 class="my-4">Forgot your password?</h1>
        <%= form_with url: password_reset_path do |f| %>
          <p>
          <%= f.label 'email:' %><br />
          <%= f.text_field :email %>
          </p>

          <p>
          <%= f.submit 'Reset Password', class:"my-4" %>
          </p>

        <% end %>
      </div>
    </div>
  </div>
</section>