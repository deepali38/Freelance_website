<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.label :category, style: "display: block",required: true%>
      <%= f.select :category_id, options_for_select(@categories.collect{|cat| [cat.name, cat.id]})%>
    </div>
  </div>

  <div class="form-inputs">
    <div class="field">
      <div class="control">
        <%= f.input :description, required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" },placeholder:'Describe about your skills in detail' %> 
      </div>
    </div>

    <div class="columns">
      <div class="field column">
        <div class="control">
          <label class="label">Files Upload</label>
          <div class="file">
            <%= f.file_field :files, multiple: true, direct_upload: true %>
          </div>
        </div>
      </div>

      <div class="column">
        <output id="list"></output>
      </div>
    </div>
    
    <%= f.input :is_private, input_html: { class: "option" }%>
  </div>

  <%= f.button :submit, class: "button is-primary is-small is-rounded mv4" %>
<% end %>
