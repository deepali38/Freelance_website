
<%= simple_form_for(@profile) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <div class="field">
        <div class="control">
          <%= f.input :description, required: true, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" },placeholder:'Describe about your skills in detail' %>
        </div>
      </div>
    <%= f.input :is_private, input_html: { class: "option" }%>
  </div>

  <%= f.button :submit, class: "button is-primary is-small is-rounded mv4" %>
<% end %>
