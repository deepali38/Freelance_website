
<div class="container mt-6 text-center">

  <a href="#" class="text-decoration-none  ">
    <%= image_tag Current.user.avatar,class:"rounded-circle1 text-center"%>
  </a>

  <h1 class="mt-3 mb-4"><%=Current.user.name_or_company_name%></h1>
 
  <div class="card text-center mb-6" style="background-color: #eee;">
    <div class="card-body">
      <%if Current.user.profile.nil?%>
        <p class="arrange"style="background-color: #eee;">
          Seems like you have not created your profile page yet. to create it  click at the below link and starts your journey towards immense opputunity<br>
          <%= link_to "Create a profile", new_profile_path %>
        </p>
  
      <% else %>
        <div id="profiles">
        <%= render Current.user.profile %>
        <p>
          <%= link_to "Show this profile", Current.user.profile %>
        </p>
        </div>
      <%end%>
    </div>
  </div>
 </div>
</div>
<%= render 'shared/footer'%>
