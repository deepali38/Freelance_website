<div class="container">
<div id="appearance_channel"></div>
<div id="chatroom_container" class="row text-light">
  <div id="side_panel" class="col-md-4 col-sm-4">
    <li class="list-group-item d-flex align-items-center justify-content-between user_list_item mt-4">
      <div class="icon-container">
        <%= link_to image_tag(@current_user.chat_avatar, class: 'chat_pfp'), @current_user %>
      </div>
      <div class='ms-2 me-auto username'>
        <%= @current_user.name_or_company_name%>
      </div>
    </li>
    <h4> Users </h4>
    <%= turbo_stream_from "users" %>
    <div id="users">
      <%= render @users %>
    </div>
    <h4> Rooms </h4>
    <%= turbo_stream_from "rooms" %>
    <%= render 'layouts/new_room_form' %>
    <div id="rooms">
      <%= render @rooms%>
    </div>
  </div>
  <div id="room_container"
  class="col-md-8 col-sm-8 text-light">
    <% if @single_room %>
      <div id="single_room">
        <h4 class="text-center text-dark fs-3 fw-bold mt-4"> <%= @user&.email || @single_room.name %> </h4>
        <%= turbo_stream_from @single_room %>
        <div id="messages" data-controller="scroll">
          <div id="messages-container">
            <%= render @messages %>
          </div>
        </div>
        <%= render 'layouts/new_message_form' %>
      </div>
    <% end %>
  </div>
</div>
</div>